<?xml version="1.0" ?>
<robot name="planar_arm">
  <link name="base"/>

  <joint name="joint1" type="revolute">
    <parent link="base"/>
    <child link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="1.0" velocity="1.0"/>
  </joint>


  <link name="link1">
    <visual>
      <geometry>
        <box size="1 0.1 0.1"/>
      </geometry>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
    </visual>
  </link>

  <joint name="joint2" type="revolute">
      <parent link="link1"/>
      <child link="link2"/>
      <origin xyz="1 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-3.14" upper="3.14" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry>
        <box size="1 0.1 0.1"/>
      </geometry>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
    </visual>
  </link>
</robot>